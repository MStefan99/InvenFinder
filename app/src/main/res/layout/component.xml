<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/component_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="8dp"
	android:focusable="true"
	android:clickable="true"
	android:foreground="?android:attr/selectableItemBackground">

	<TextView
		android:id="@+id/component_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:fontFamily="sans-serif-light"
		android:text="@string/name"
		android:textColor="?attr/colorForeground"
		android:textSize="24sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/component_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:fontFamily="sans-serif-medium"
		android:text="@string/description"
		android:textColor="?attr/colorMuted"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/component_name" />

	<TextView
		android:id="@+id/component_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:fontFamily="sans-serif-medium"
		android:text="@string/sample_location"
		android:textColor="?attr/colorForeground"
		app:layout_constraintBottom_toBottomOf="@+id/component_name"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@+id/component_name" />

	<TextView
		android:id="@+id/component_amount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:fontFamily="sans-serif-medium"
		android:text="@string/sample_amount"
		android:textColor="?attr/colorMuted"
		app:layout_constraintBottom_toBottomOf="@+id/component_description"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@+id/component_description" />

</androidx.constraintlayout.widget.ConstraintLayout>